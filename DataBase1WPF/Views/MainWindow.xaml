<Window x:Class="DataBase1WPF.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataBase1WPF.Views" xmlns:viewmodels="clr-namespace:DataBase1WPF.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        WindowStartupLocation="CenterScreen" Closing="Window_Closing">

    <Window.DataContext>
        <viewmodels:MainVM/>
    </Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0" Margin="30 30 0 0">
            <TextBlock HorizontalAlignment="Left"
                       FontSize="20">
    Введите свой запрос
            </TextBlock>
        </DockPanel>
        <DockPanel Grid.Row="1" Margin="0 0 0 0">
            <DockPanel HorizontalAlignment="Center">
                <TextBox x:Name="textBoxQuery" Text="{Binding Query}" 
                     FontSize="20" HorizontalAlignment="Center" 
                     VerticalAlignment="Bottom"
                  
                     Width="600" Height="30">
                </TextBox>
                <Button HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    Margin="30 0 0 0"
                    Width="100"
                    Height="30" 
                    Command="{Binding ClickExecuteQuery}">
                    Выполнить</Button>
            </DockPanel>
        </DockPanel>
        <DockPanel Grid.Row="2" >
            <TextBlock HorizontalAlignment="Center" FontSize="20" Height="30"
                       Text="Полученные данные"/>
        </DockPanel>
        
        <DockPanel Grid.Row="3">
            <DataGrid  Height="300" 
                  Width="600" x:Name="dataSQL" 
                  ItemsSource="{Binding DataTable}"
                  LoadingRow="DataGrid_LoadingRow"
                  AutoGenerateColumns="True" IsReadOnly="True">
                <!--
    <DataGrid.Columns>
        <DataGridTextColumn Header="ID" Width="Auto" IsReadOnly="True"  Binding="{Binding Id}" />
        <DataGridTextColumn Header="Наименование" Width="Auto" IsReadOnly="True"  Binding="{Binding Title}" />
    </DataGrid.Columns>
    -->

            </DataGrid>
        </DockPanel>
                
            
        
    </Grid>
</Window>
